  "emmet.triggerExpansionOnTab": true,

  // "files.autoSave": "onWindowChange",
  // "editor.fontSize": 16,
  // "editor.tabSize": 2,
  // "editor.wordWrap": "on",
  // "editor.autoClosingBrackets": "always",
